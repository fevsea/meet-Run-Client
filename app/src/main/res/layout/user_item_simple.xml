<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:padding="@dimen/meeting_item_padding_vertical">
    <TextView
        android:id="@+id/meeting_item_user_photo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/meeting_item_margin"
        android:background="@drawable/user_profile_circular_text_view"
        android:gravity="center"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/meeting_item_level2"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/meeting_item_margin"
        android:background="@drawable/level_circular_text_view"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/meeting_item_user_photo2"
        android:layout_toStartOf="@id/meeting_item_level2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/meeting_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/meeting_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/meeting_item_postcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
