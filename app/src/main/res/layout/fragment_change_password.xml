<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.fib.meetnrun.views.fragments.EditProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentPass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:labelFor="@+id/currentPass"
            android:layout_marginTop="10dp"
            android:text="@string/current_password" />

        <EditText
            android:id="@+id/currentPass_enter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/currentPass_label"/>

        <TextView
            android:id="@+id/newPass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:labelFor="@+id/newPass"
            android:layout_below="@+id/currentPass_enter"
            android:layout_marginTop="10dp"
            android:text="@string/new_password" />

        <EditText
            android:id="@+id/newPass_enter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/newPass_label"/>

        <TextView
            android:id="@+id/repeatNewPass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:labelFor="@+id/repeatNewPass"
            android:layout_below="@+id/newPass_enter"
            android:layout_marginTop="10dp"
            android:text="@string/repeat_new_password" />

        <EditText
            android:id="@+id/repeatNewPass_enter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/repeatNewPass_label"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_changes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/repeatNewPass_enter"/>

    </RelativeLayout>

</ScrollView>