<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_paddig">
    <android.support.v7.widget.CardView
        android:id="@+id/meeting_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_depth"
        card_view:cardCornerRadius="@dimen/card_radius"
        card_view:cardElevation="@dimen/card_depth">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_paddig">

            <!-- Once images are added refactor this -->
            <ImageView
                android:id="@+id/meeting_item_user_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:background="@android:color/black"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <!-- TODO imageview rounded and with another little imageview with the user level
                 TODO check TextDrawable library to do it -->
            <TextView
                android:id="@+id/meeting_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/meeting_item_user_photo"/>

            <!-- TODO add Styles for the Textview themes (textsize, font, etc) -->

            <TextView
                android:id="@+id/meeting_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_item_user_name"
                android:layout_toEndOf="@id/meeting_item_user_photo"/>
            <RelativeLayout
                android:id="@+id/meeting_item_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/meeting_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/meeting_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/meeting_item_date" />
                <ImageButton
                    android:id="@+id/meeting_item_meet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_below="@id/meeting_item_time" />

            </RelativeLayout>
            <TextView
                android:id="@+id/meeting_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/meeting_item_datetime"
                android:background="@drawable/circular_text_view"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>