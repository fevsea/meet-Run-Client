<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_paddig">
    <android.support.v7.widget.CardView
        android:id="@+id/meeting_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_paddig">
            <ImageView
                android:id="@+id/meeting_item_user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <!-- TODO imageview rounded and with another little imageview with the user level
                 TODO check TextDrawable library to do it -->
            <TextView
                android:id="@+id/meeting_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/meeting_item_user_photo"/>

            <!-- TODO add Styles for the Textview themes (textsize, font, etc) -->

            <TextView
                android:id="@+id/meeting_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_item_user_name"
                android:layout_toRightOf="@id/meeting_item_user_photo"/>
            <TextView
                android:id="@+id/meeting_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/meeting_item_user_name"
                android:gravity="center"
                android:background="@drawable/circular_text_view"/>
            <TextView
                android:id="@+id/meeting_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/meeting_item_level"/>
            <ImageButton
                android:id="@+id/meeting_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:layout_toRightOf="@id/meeting_item_level"
                android:layout_below="@id/meeting_item_date"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>