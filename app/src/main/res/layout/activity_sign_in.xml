<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.fib.meetnrun.views.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:layout_marginTop="19dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="17dp"
                android:layout_below="@+id/name"
                android:layout_alignStart="@+id/name" />

            <TextView
                android:id="@+id/surname"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surname:"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/editName"
                android:layout_alignStart="@+id/editSurname" />

            <EditText
                android:id="@+id/editSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="17dp"
                android:layout_below="@+id/surname"
                android:layout_alignStart="@+id/editName" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:textSize="17dp"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/editSurname"
                android:layout_alignStart="@+id/editSurname" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="17dp"
                android:layout_below="@+id/username"
                android:layout_alignStart="@+id/username" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail:"
                android:textSize="17dp"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/editUsername"
                android:layout_alignStart="@+id/editUsername" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="17dp"
                android:layout_below="@+id/email"
                android:layout_alignStart="@+id/email" />


            <TextView
                android:id="@+id/postalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal Code:"
                android:textSize="17dp"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/editEmail"
                android:layout_alignStart="@+id/editEmail" />

            <EditText
                android:id="@+id/editPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textSize="17dp"
                android:layout_below="@+id/postalCode"
                android:layout_alignStart="@+id/postalCode" />

            <TextView
                android:id="@+id/password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editPostalCode"
                android:layout_below="@+id/editPostalCode"
                android:layout_marginTop="14dp"
                android:text="Password (min. 5 characters):"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editPassword1"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_below="@+id/password1"
                android:layout_alignStart="@+id/password1" />

            <TextView
                android:id="@+id/password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat password:"
                android:textSize="17dp"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/editPassword1"
                android:layout_alignStart="@+id/editPassword1" />

            <EditText
                android:id="@+id/editPassword2"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_below="@+id/password2"
                android:layout_alignStart="@+id/password2" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="register"
                android:text="Register"
                android:textSize="13dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/editAnswer"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/password2"
                android:layout_below="@+id/editPassword2"
                android:text="Security question:"
                android:textSize="17dp"
                android:layout_marginTop="14dp" />

            <Spinner
                android:id="@+id/spinnerQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question"
                android:layout_alignStart="@+id/editPassword2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/question"
                android:layout_below="@+id/spinnerQuestion"
                android:text="Answer:"
                android:textSize="17dp"
                android:layout_marginTop="14dp" />

            <EditText
                android:id="@+id/editAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_alignStart="@+id/spinnerQuestion"
                android:textSize="17dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
