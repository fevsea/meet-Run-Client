<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upc.fib.meetnrun">

    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="26" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_geo_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MeetingInfoActivity"
            android:label="@string/meeting_info_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CreateMeetingActivity"
            android:label="@string/create_meeting_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.EditMeetingActivity"
            android:label="@string/edit_meeting_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.RegisterActivity"
            android:label="@string/register_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.MeetingListActivity"
            android:hardwareAccelerated="true"
            android:label="@string/meeting_list_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.EditProfileActivity"
            android:label="@string/title_edit_profile"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.FriendsActivity"
            android:label="@string/friends_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.FriendProfileActivity"
            android:label="@string/friend_profile_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.UserProfileActivity"
            android:label="@string/user_profile_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.UsersListActivity"
            android:label="@string/users_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.SettingsActivity"
            android:label="@string/action_settings"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.ChangePasswordActivity"
            android:label="@string/action_change_pass"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.MyMeetingsActivity"
            android:label="@string/mymeetings_label"
            android:screenOrientation="portrait"/>

    </application>

</manifest>